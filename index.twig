{{ set(this, 'title', _Blog.getBlogTitle()) }}

{{this.registerJs("HomeController.listing();")}}
{% set limit = 20 %}
{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
{% set articles = articlesArr.articles %}
<div class="page_section">
    {% if articles[0] is defined %}
        {{this.render('partials/_single-article.twig', {article: articles[0], 'position': 1, cardClass: 'card__banner full-screen', viewType: 'banner'}) | raw}}
    {% endif %}

    <div class="container">

    <div class="row col-centered" style="width:970px; height:90px; background-color:#fff; margin-bottom: 20px; ">
        <img src="{{network.templatePath ~ "/static/images/"}}sampleaddbanner.png" style="display:block; margin:0 auto">
    </div>


        {% if articles|length > 0 %}
            <div class="row">
                <div class="col-two-thirds">
                    {% if articles[1] %}
                        {{this.render('partials/_single-article.twig', {article: articles[1], 'position': 2, viewType: '2col'}) | raw}}
                    {% endif %}
                </div>
                <div class="col-third-short">
                    {% for i in 2..3 %}
                        {% if articles[i] %}
                            {{this.render('partials/_single-article.twig', {article: articles[i], 'position': (i+1), viewType: 'small'}) | raw}}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {% if articles[4] is defined %}
            <div class="row">
                <div class="col-two-thirds">
                    {% if articles[4] is defined %}
                        {{this.render('partials/_single-article.twig', {article: articles[4], 'position': 5, viewType: '2col'}) | raw}}
                    {% endif %}
                </div>
                <div class="col-third">
                    {% if articles[5] is defined %}
                        {{this.render('partials/_single-article.twig', {article: articles[5], 'position': 6, viewType: '1col',}) | raw}}
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
    
    {% set cta = _CallToAction.getKeywordBasedCTA('cta_1')%}
    {% if cta is defined and cta is not empty %}
        {% set ctaBackgroundImage = ''%}
        {% if(cta.media['id'] is defined and cta.media['id'] is not empty) %}
            {% set ctaBackgroundImage = _Media.getMediaUrl(cta.media,0,0,{'crop': 'fill'}) %}
        {% endif %}
        {{this.registerCss("
            .cta_block_"~cta.id~" .button.blue {
                border-color: "~cta.button['backgroundColor']~";
                background: "~cta.button['backgroundColor']~"
            }
            .cta_block_"~cta.id~" .button.blue:hover {
                color: "~cta.button['backgroundColor']~";
                border-color: "~cta.button['backgroundColor']~";
                background: none repeat scroll 0 0
            } 
        ")}}
        <div class="clearfix"></div>
        <div class="call-to-action-wrapper image-covered cta_block_{{cta.id}}" style="background-image: url('{{ctaBackgroundImage}}');;background-color:{{cta.backgroundColor}};">
            <div class="overlay_layer"></div>
            <div class="container">
                <div class="row">
                    <div class="col-md-5 col-sm-8 col-xs-12 col-centered text-center">
                        <div class="content-area">
                            <h3 class="upper">{{cta.title |raw}}</h3>
                            <p>{{cta.description |raw}}</p>
                            <div class="form-group button-set">
                                <a target="_blank" href="{{cta.button['url']}}"  class="button blue upper" name="contact-button">{{cta.button['text'] |raw}}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="container">
        {% if articles[6] is defined %}
            <div class="row">
                <div class="col-two-thirds">
                    {% if articles[6] is defined %}
                        {{this.render('partials/_single-article.twig', {article: articles[6], 'position': 7, viewType: '2col'}) | raw}}
                    {% endif %}
                </div>
                <div class="col-third">
                    {% if articles[7] is defined %}
                        {{this.render('partials/_single-article.twig', {article: articles[7], 'position': 8, viewType: '1col'}) | raw}}
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
    {% if articles[8] is defined %}
    <div class="container">
        {% if articles[8] is defined %}
            <div class="row">
                <div class="col-two-thirds">
                    {% if articles[8] is defined %}
                        {{this.render('partials/_single-article.twig', {article: articles[8], 'position': 9, viewType: '2col'}) | raw}}
                    {% endif %}
                </div>
                <div class="col-third" style="background-color:#fff; height:410px; ">
                    <img src="{{network.templatePath ~ "/static/images/"}}sampleadd1.png" style="display:block; margin:10% auto 0 auto">
                    {# {% if articles[9] is defined %}
                        {{this.render('partials/_single-article.twig', {article: articles[9], 'position': 10, viewType: '1col'}) | raw}}
                    {% endif %} #}


                </div>
            </div>
        {% endif %}

        {% if articles[9] is defined %}
            <div class="row">
                <div class="col-full"> 
                    {% if articles[9] is defined %}
                        {{this.render('partials/_single-article.twig', {article: articles[9], 'position': 11, cardClass: 'card__banner', viewType: 'banner'}) | raw}}
                    {% endif %}
                </div>
            </div>
        {% endif %}
        
        {% if articles[10] is defined %}
            <div class="row">
                {% for i in 10..12 %}
                    {% if articles[i] is defined %}
                        <div class="col-third">
                            {{this.render('partials/_single-article.twig', {article: articles[i], 'position': (i+1), viewType: '2col'}) | raw}}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
    {% endif %}
    
    {% if articles[13] is defined %}
    {% set cta = _CallToAction.getKeywordBasedCTA('cta_2')%}
    {% if cta is defined and cta is not empty %}
        {% set ctaBackgroundImage = ''%}
        {% if(cta.media['id'] is defined and cta.media['id'] is not empty) %}
            {% set ctaBackgroundImage = _Media.getMediaUrl(cta.media,0,0,{'crop': 'fill'}) %}
        {% endif %}
        {{this.registerCss("
            .cta_block_"~cta.id~" .button.blue {
                border-color: "~cta.button['backgroundColor']~";
                background: "~cta.button['backgroundColor']~"
            }
            .cta_block_"~cta.id~" .button.blue:hover {
                color: "~cta.button['backgroundColor']~";
                border-color: "~cta.button['backgroundColor']~";
                background: none repeat scroll 0 0
            } 
        ")}}
        <div class="clearfix"></div>
        <div class="call-to-action-wrapper image-covered cta_block_{{cta.id}}" style="background-image: url('{{ctaBackgroundImage}}');background-color:{{cta.backgroundColor}};">
            <div class="overlay_layer"></div>
            <div class="container">
                <div class="row">
                    <div class="col-md-5 col-sm-8 col-xs-12 col-centered text-center">
                        <div class="content-area">
                            <h3 class="upper">{{cta.title |raw}}</h3>
                            <p>{{cta.description |raw}}</p>
                            <div class="form-group button-set">
                                <a target="_blank" href="{{cta.button['url']}}"  class="button blue upper" name="contact-button">{{cta.button['text'] |raw}}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    {% endif %}
    <div class="container">
        {% if articles[13] is defined %}
            <div class="row">
                {% for i in 13..18 %}
                    {% if articles[i] is defined %}
                        <div class="col-third">
                            {{this.render('partials/_single-article.twig', {article: articles[i], 'position': (i+1), viewType: '2col'}) | raw}}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        <div class="row ajaxArticles" data-existing-nonpinned-count="{{articlesArr.existingNonPinnedCount}}"></div>
        <div class=" text-center has-margin-bottom-40">
            {% if articles|length >= limit %}
                <a href="javascript:void(0)" class="button loadMoreArticles"><i class="fa fa-arrow-down" aria-hidden="true"></i> Load More</a>
            {% endif %}
        </div>         
    </div>
</div>
